<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="The beer Road"
                android:id="@+id/textView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="dayClicked"
                android:text="Day 1"
                android:id="@+id/checkBox_day1"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="32dp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 2"
                android:onClick="dayClicked"
                android:id="@+id/checkBox_day2"
                android:layout_marginStart="29dp"
                android:layout_centerHorizontal="true"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 3"
                android:onClick="dayClicked"
                android:id="@+id/checkBox_day3"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="29dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 4"
                android:onClick="dayClicked"
                android:id="@+id/checkBox_day4"
                android:layout_marginStart="29dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 5"
                android:onClick="dayClicked"
                android:id="@+id/checkBox_day5"
                android:layout_marginStart="29dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 6"
                android:onClick="dayClicked"
                android:id="@+id/checkBox_day6"
                android:layout_marginStart="29dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 7"
                android:onClick="dayClicked"
                android:id="@+id/checkBox_day7"
                android:layout_marginStart="29dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 8"
                android:onClick="dayClicked"
                android:id="@+id/checkBox_day8"
                android:layout_marginStart="29dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 9"
                android:onClick="dayClicked"
                android:id="@+id/checkBox_day9"
                android:layout_marginStart="29dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Beer"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>
